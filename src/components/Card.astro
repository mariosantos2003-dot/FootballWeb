---
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
    image?: string;
    link?: string;
}

const { title, description = "", image = "/default-image.jpg", link = "" } = Astro.props;
---

<main>
    <article class="w-72 bg-black rounded-2xl overflow-hidden hover:scale-105 transition-transform duration-300">
        {image && (
            <div class="w-full h-48 overflow-hidden">
                <img 
                    src={image} 
                    alt={title} 
                    class="w-full h-full object-cover"
                />
            </div>
        )}
        <div class="p-6 flex flex-col gap-4">
            <h2 class="text-xl text-white font-bold">{title}</h2>
            {description && (
                <p class="text-gray-300 text-sm">{description}</p>
            )}
            {link && (
                <a 
                    href={link} 
                    class="bg-gray-700 hover:bg-gray-600 text-white py-2 px-4 rounded-lg transition-colors duration-300 text-center"
                >
                    Read More
                </a>
            )}
        </div>
    </article>
</main>